<p id="notice"><%= notice %></p>

<h1>Reviews for the Tour <%= @tour.name %></h1>

<table>
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Customer email</th>
      <th>Rating</th>
      <th>Subject</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if !@reviews.nil? %>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.get_customer_name %></td>
          <td><%= review.get_customer_email %></td>
          <td><%= review.rating %></td>
          <td><%= review.subject %></td>
          <td><%= review.content %></td>
          <td><%= link_to 'Show', review_path %></td>
          <% if current_user.admin? %>
            <td><%= link_to 'Edit', edit_review_path(review) %></td>
            <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %>
  <%= link_to 'New Review', new_review_path %>
<% end %>

<%= link_to 'Back to Tour', @tour %>