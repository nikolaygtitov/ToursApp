<div>
  <h1>Welcome to Tours Application</h1>
  <p>Tour Management System:</p>
  <%= link_to 'User Page', users_url %>
  <br>
  <%= link_to 'Tours Page', tours_url %>
  <br>
  <% if user_signed_in? %>
    <% if current_user.admin? || current_user.agent? %>
      <%= link_to 'My Customers Page', bookings_url %>
    <% elsif current_user.admin? || current_user.customer? %>
      <%= link_to 'My Bookings Page', my_bookings_url %>
    <% end %>
  <% else %>
    <%= link_to 'Bookings Page', bookings_url %>
  <% end %>
</div>
