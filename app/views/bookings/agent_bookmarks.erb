<p id="notice"><%= notice %></p>

<h1>List of All Customers Bookmarked My Tours</h1>

<table>
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Customer email</th>
      <th>Tour name</th>
      <th>Tour price</th>
      <th>Tour start location</th>
      <th>Tour start date</th>
      <th>Tour end date</th>
      <th>Tour status</th>
      <th>Available seats</th>
      <th>Wait list</th>
      <th>Total seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <% if current_user.id == booking.find_agent_id_of_tour && booking.bookmark %>
        <tr>
          <td><%= booking.find_customer.name %></td>
          <td><%= booking.find_customer.email %></td>
          <td><%= booking.find_booked_tour.name %></td>
          <td><%= booking.find_booked_tour.price %></td>
          <td><%= booking.find_booked_tour.start_location %></td>
          <td><%= booking.find_booked_tour.start_date %></td>
          <td><%= booking.find_booked_tour.end_date %></td>
          <td><%= booking.find_booked_tour.show_status %></td>
          <td><%= booking.find_booked_tour.available_seats %></td>
          <td><%= booking.find_booked_tour.get_waitlist %></td>
          <td><%= booking.find_booked_tour.total_seats %></td>
          <td><%= link_to 'Show Tour', booking.find_booked_tour %></td>
          <td><%= link_to 'Show Customer', booking.find_customer %></td>
          <td><%= link_to 'Edit Tour', edit_tour_url(booking.find_booked_tour) %></td>
         </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

