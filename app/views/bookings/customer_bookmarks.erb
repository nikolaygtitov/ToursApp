<p id="notice"><%= notice %></p>

<%= form_tag(undo_bookmark_url, method: :get)  do %>
  <h1>My Bookmarked Tours</h1>

  <table>
    <thead>
      <tr>
        <th>Undo Bookmark</th>
        <th>Tour name</th>
        <th>Tour price</th>
        <th>Tour start location</th>
        <th>Tour start date</th>
        <th>Tour end date</th>
        <th>Tour status</th>
        <th>Booked seats</th>
        <th>My wait list</th>
        <th>Tour Available seats</th>
        <th>Tour Wait list</th>
        <th>Tour total seats</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bookings.each do |booking| %>
        <% if current_user.admin? || (current_user.id == booking.user_id && booking.bookmark) %>
          <tr>
            <td><%= check_box_tag 'tour_id[]', booking.find_booked_tour.id %></td>
            <td><%= booking.find_booked_tour.name %></td>
            <td><%= booking.find_booked_tour.price %></td>
            <td><%= booking.find_booked_tour.start_location %></td>
            <td><%= booking.find_booked_tour.start_date %></td>
            <td><%= booking.find_booked_tour.end_date %></td>
            <td><%= booking.find_booked_tour.show_status %></td>
            <td><%= booking.booked_seats %></td>
            <td><%= booking.waitlist_seats %></td>
            <td><%= booking.find_booked_tour.available_seats %></td>
            <td><%= booking.find_booked_tour.get_waitlist %></td>
            <td><%= booking.find_booked_tour.total_seats %></td>
            <td><%= link_to 'Show Tour', booking.find_booked_tour %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= submit_tag 'Undo bookmark' %>
<% end %>

<br>

