<p id="notice"><%= notice %></p>

<h1>Let's Get Started! What do you want to do?</h1>

<%= link_to 'Edit/Delete Profile', edit_user_registration_url %>

<br/>

<% if current_user.admin? %>
  <h1>Users section (only for Admin purposes)</h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% if !user.admin? %>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
  <td><%= link_to 'Create New User', new_user_url %></td>
<% end %>

<br/>
<br/>

<h1>Tours section</h1>
<% if current_user.admin? || current_user.agent? %>
  <%= link_to 'Create/View/Edit/Cancel/Delete Tours', tours_url %>
<% else %>
  <%= link_to 'View/Book Tours', tours_url %>
<% end %>

<br/>
<br/>

<h1>Reviews section</h1>
<% if current_user.admin? %>
  <%= link_to 'View all fields of Reviews from customers', users_url %>
<% elsif current_user.agent? %>
  <%= link_to 'View Reviews for a tour', users_url %>
<% elsif current_user.customer? %>
  <%= link_to 'Create/Edit/Delete Review', users_url %>
<% end %>

<br/>
<br/>

<%= link_to 'Home', home_index_url %>
