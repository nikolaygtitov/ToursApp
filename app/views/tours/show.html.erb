<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
          <%= image_tag @tour.image.url(:medium) %>
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td><strong>Name:</strong></td>
                  <td><%= @tour.name %></td>
                </tr>
                <tr>
                  <td><strong>Description:</strong></td>
                  <td><%= @tour.description %></td>
                </tr>
                <tr>
                  <td><strong>Price:</strong></td>
                  <td><%= @tour.price %></td>
                </tr>
                <tr>
                  <td><strong>Deadline:</strong></td>
                  <td><%= @tour.deadline %></td>
                </tr>
                <tr>
                  <td><strong>Deadline:</strong></td>
                  <td><%= @tour.deadline %></td>
                </tr>
                <tr>
                   <td><strong>Start date:</strong></td>
                    <td><%= @tour.start_date %></td>
                </tr>
                <tr>
                  <td><strong>End date:</strong></td>
                  <td><%= @tour.end_date %></td>
                </tr>
                <tr>
                  <td><strong>Start location:</strong></td>
                  <td><%= @tour.start_location %></td>
                </tr>
                <tr>
                  <td><strong>Countries itinerary:</strong></td>
                  <td><%= @tour.country %></td>
                </tr>
                <tr>
                  <td><strong>States itinerary:</strong></td>
                  <td><%= @tour.state %></td>
                </tr>
                <tr>
                  <td><strong>Available seats:</strong></td>
                  <td><%= @tour.available_seats %></td>
                </tr>
                <tr>
                  <td><strong>Wait list:</strong></td>
                  <td><%= @tour.get_waitlist %></td>
                </tr>
                <tr>
                  <td><strong>Total seats:</strong></td>
                  <td><%= @tour.total_seats %></td>
                </tr>
                <tr>
                  <td><strong>Status:</strong></td>
                  <td><%= @tour.show_status %></td>
                </tr>
                <tr>
                  <td><strong>Contact information:</strong></td>
                  <td><%= @tour.show_agent_info %></td>
                </tr>
              </tbody>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>



<% if (current_user.admin? || current_user.customer?) && !@tour.is_completed? && !@tour.canceled && !@tour.is_booked?(current_user.id) %>
  <%= link_to 'Book Tour', new_booking_path(tour_id: @tour.id) %> |
<% end %>
<% if current_user.admin? || current_user.agent? %>
  <td><%= link_to 'Back to My Customers', bookings_url(id: current_user.id) %></td> |
  <%= link_to 'Edit', edit_tour_path(@tour) %> |
  <% if !@tour.is_completed? && !@tour.canceled %>
    <%= link_to 'Cancel', cancel_tour_tour_path(@tour), method: :put, data: { confirm: 'Are you sure Cancelling Tour?' }   %> |
  <% end %>
<% end %>

<%= link_to 'Back to Tours', tours_path %>
